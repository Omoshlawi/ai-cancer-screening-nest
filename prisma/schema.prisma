generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                   @id
  name                    String
  email                   String
  emailVerified           Boolean                  @default(false)
  image                   String?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @default(now()) @updatedAt
  username                String?
  displayUsername         String?
  role                    String?
  banned                  Boolean?                 @default(false)
  banReason               String?
  banExpires              DateTime?
  sessions                Session[]
  accounts                Account[]
  communityHealthProvider CommunityHealthProvider?

  @@unique([email])
  @@unique([username])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@map("verification")
}

model Jwks {
  id         String   @id
  publicKey  String
  privateKey String
  createdAt  DateTime

  @@map("jwks")
}

model CommunityHealthProvider {
  id          String      @id @default(cuid())
  userId      String      @unique
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName   String
  lastName    String
  phoneNumber String
  clients     Client[]
  screenings  Screening[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Client {
  id            String                  @id @default(cuid())
  firstName     String
  lastName      String
  dateOfBirth   DateTime
  phoneNumber   String
  address       String
  nationalId    String
  maritalStatus MaritalStatus
  createdById   String
  createdBy     CommunityHealthProvider @relation(fields: [createdById], references: [id], onDelete: Cascade)
  screenings    Screening[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
  SEPARATED
}

model Screening {
  id       String @id @default(cuid())
  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  providerId String
  provider   CommunityHealthProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  coordinates Json // { latitude: number, longitude: number }

  lifeTimePatners                         Int
  firstIntercourseAge                     Int
  everDiagnosedWithHIV                    ScreenBoolean
  everDiagnosedWithHPV                    ScreenBoolean
  everDiagnosedWithSTI                    ScreenBoolean
  totalBirths                             Int
  everScreenedForCervicalCancer           ScreenBoolean
  usedOralContraceptivesForMoreThan5Years ScreenBoolean
  smoking                                 SmokingStatus
  familyMemberDiagnosedWithCervicalCancer ScreenBoolean
  scoringResult                           Json? // { clientAge: number | null, breakdown: RiskFactorScore[], aggregateScore: number, interpretation: RiskInterpretation, shouldAutoScreen: boolean }

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  referrals Referral[]
}

enum ScreenBoolean {
  YES
  NO
  NOT_SURE
}

enum SmokingStatus {
  CURRENTLY
  NEVER
  PAST
}

model HealthFacility {
  id          String     @id @default(cuid())
  name        String // Facility Name
  address     String
  phoneNumber String // Contact Phone Number
  email       String // Contact Email
  logo        String // Facility Logo
  coordinates Json // { latitude: number, longitude: number }
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt
  referrals   Referral[]
}

model FrequentlyAskedQuestion {
  id        String   @id @default(cuid())
  question  String
  answer    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum ReferralStatus {
  PENDING
  COMPLETED
  CANCELLED
}

model Referral {
  id               String         @id @default(cuid())
  screeningId      String
  screening        Screening      @relation(fields: [screeningId], references: [id], onDelete: Cascade)
  appointmentTime  DateTime
  additionalNotes  String?
  healthFacilityId String
  healthFacility   HealthFacility @relation(fields: [healthFacilityId], references: [id], onDelete: Cascade)
  status           ReferralStatus
  createdAt        DateTime       @default(now())
  updatedAt        DateTime       @updatedAt
}
