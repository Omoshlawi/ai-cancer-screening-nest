generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                      String                   @id
  name                    String
  email                   String
  emailVerified           Boolean                  @default(false)
  image                   String?
  createdAt               DateTime                 @default(now())
  updatedAt               DateTime                 @default(now()) @updatedAt
  username                String?
  displayUsername         String?
  role                    String?
  banned                  Boolean?                 @default(false)
  banReason               String?
  banExpires              DateTime?
  sessions                Session[]
  accounts                Account[]
  communityHealthProvider CommunityHealthProvider?
  activities              UserActivity[]

  twoFactorEnabled Boolean?    @default(false)
  twofactors       TwoFactor[]

  phoneNumber         String?
  phoneNumberVerified Boolean?

  @@unique([email])
  @@unique([username])
  @@unique([phoneNumber])
  @@map("user")
}

model Session {
  id             String   @id
  expiresAt      DateTime
  token          String
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  ipAddress      String?
  userAgent      String?
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  impersonatedBy String?

  @@unique([token])
  @@index([userId])
  @@map("session")
}

model Account {
  id                    String    @id
  accountId             String
  providerId            String
  userId                String
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  accessToken           String?
  refreshToken          String?
  idToken               String?
  accessTokenExpiresAt  DateTime?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  password              String?
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt

  @@index([userId])
  @@map("account")
}

model Verification {
  id         String   @id
  identifier String
  value      String
  expiresAt  DateTime
  createdAt  DateTime @default(now())
  updatedAt  DateTime @default(now()) @updatedAt

  @@index([identifier])
  @@map("verification")
}

model Jwks {
  id         String   @id
  publicKey  String
  privateKey String
  createdAt  DateTime

  @@map("jwks")
}

model CommunityHealthProvider {
  id          String      @id @default(cuid())
  userId      String      @unique
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  firstName   String
  lastName    String
  phoneNumber String
  clients     Client[]
  screenings  Screening[]

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  followUps FollowUp[]
}

model Client {
  id            String                  @id @default(cuid())
  firstName     String
  lastName      String
  dateOfBirth   DateTime
  phoneNumber   String
  county        String
  subcounty     String
  ward          String
  nationalId    String
  maritalStatus MaritalStatus
  createdById   String
  createdBy     CommunityHealthProvider @relation(fields: [createdById], references: [id], onDelete: Cascade)
  screenings    Screening[]
  metadata      Json? // { riskInterpretation: RiskInterpretation, riskScore: number }

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  followUps FollowUp[]
}

enum MaritalStatus {
  SINGLE
  MARRIED
  DIVORCED
  WIDOWED
  SEPARATED
}

model Screening {
  id       String @id @default(cuid())
  clientId String
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)

  providerId String
  provider   CommunityHealthProvider @relation(fields: [providerId], references: [id], onDelete: Cascade)

  coordinates Json // { latitude: number, longitude: number }

  lifeTimePatners                         Int
  firstIntercourseAge                     Int
  everDiagnosedWithHIV                    ScreenBoolean
  everDiagnosedWithHPV                    ScreenBoolean
  everDiagnosedWithSTI                    ScreenBoolean
  totalBirths                             Int
  everScreenedForCervicalCancer           ScreenBoolean
  usedOralContraceptivesForMoreThan5Years ScreenBoolean
  smoking                                 SmokingStatus
  familyMemberDiagnosedWithCervicalCancer ScreenBoolean
  scoringResult                           Json? // { clientAge: number | null, breakdown: RiskFactorScore[], aggregateScore: number, interpretation: RiskInterpretation, shouldAutoScreen: boolean }
  nextScreeningDate                       DateTime? // for morderate next 3 months and low its 3-5 yrs

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  referrals Referral[]

  // Relation back to the follow-up that led to this screening
  wasTriggeredBy FollowUp? @relation("ResolvingScreening")

  // Relation to the follow-up this screening spawned
  triggeredFollowUps FollowUp[] @relation("TriggeringScreening")
}

enum ScreenBoolean {
  YES
  NO
  NOT_SURE
}

enum SmokingStatus {
  CURRENTLY
  NEVER
  PAST
}

model HealthFacilityType {
  id               String           @id @default(cuid())
  name             String
  description      String?
  createdAt        DateTime         @default(now())
  updatedAt        DateTime         @updatedAt
  healthFacilities HealthFacility[]

  @@map("health_facility_type")
}

model HealthFacility {
  id          String             @id @default(cuid())
  name        String // Facility Name
  address     String
  phoneNumber String // Contact Phone Number
  email       String // Contact Email
  logo        String // Facility Logo
  coordinates Json // { latitude: number, longitude: number }
  typeId      String
  type        HealthFacilityType @relation(fields: [typeId], references: [id], onDelete: Cascade)
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  referrals   Referral[]
}

model FaqTopic {
  id        String                    @id @default(cuid())
  name      String
  createdAt DateTime                  @default(now())
  updatedAt DateTime                  @updatedAt
  faqs      FrequentlyAskedQuestion[]

  @@map("faq_topic")
}

model FrequentlyAskedQuestion {
  id        String    @id @default(cuid())
  question  String
  answer    String
  topicId   String?
  topic     FaqTopic? @relation(fields: [topicId], references: [id], onDelete: SetNull)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@map("frequently_asked_question")
}

model UserActivity {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action      String // e.g., "create", "update", "delete", "view"
  resource    String // e.g., "screening", "client", "referral"
  resourceId  String? // ID of the affected resource
  metadata    Json? // Additional data about the activity
  description String? // Human-readable description of the activity
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([createdAt])
  @@index([resource, resourceId])
  @@map("user_activity")
}

model TwoFactor {
  id          String @id
  secret      String
  backupCodes String
  userId      String
  user        User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("twoFactor")
}

model AddressHierarchy {
  id       String             @id @default(uuid())
  country  String // ISO country code
  level    Int // 1, 2, 3, 4, 5
  parentId String? // Reference to parent level
  parent   AddressHierarchy?  @relation("Hierarchy", fields: [parentId], references: [id])
  children AddressHierarchy[] @relation("Hierarchy")

  code      String // Unique code (e.g., "KE-30" for Nairobi County)
  name      String // Display name
  nameLocal String? // Local language name

  voided Boolean @default(false)

  @@unique([country, code])
  @@index([country, level])
  @@index([parentId])
}

model Referral {
  id String @id @default(cuid())

  screeningId String
  screening   Screening @relation(fields: [screeningId], references: [id], onDelete: Cascade)

  healthFacilityId String
  healthFacility   HealthFacility @relation(fields: [healthFacilityId], references: [id], onDelete: Cascade)

  appointmentTime  DateTime
  additionalNotes  String?
  transportNeeded  Boolean   @default(false)
  financialSupport Boolean   @default(false)
  followUp         FollowUp?

  // Final outcome
  status      ReferralStatus @default(PENDING)
  visitedDate DateTime?

  // Sometimes "Positive/Negative" isn't enough for a medical record
  testResult     TestOutcome?
  finalDiagnosis String? // e.g., "Confirmed Stage 1" or "False Positive"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FollowUp {
  id String @id @default(cuid())

  clientId String
  client   Client @relation(fields: [clientId], onDelete: Cascade, references: [id])

  providerId String
  provider   CommunityHealthProvider @relation(fields: [providerId], onDelete: Cascade, references: [id])

  // For High Risk: This will be populated
  referralId String?   @unique
  referral   Referral? @relation(fields: [referralId], onDelete: Cascade, references: [id])

  // The Trigger: The screening that CREATED this follow-up
  triggerScreeningId String
  triggerScreening   Screening @relation("TriggeringScreening", fields: [triggerScreeningId], references: [id])

  // Flexible Goal Categorization
  category FollowUpCategory
  priority Priority         @default(MEDIUM)

  // Scheduling
  startDate DateTime @default(now()) // When CHP should start acting
  dueDate   DateTime // The "Deadline" for the goal (e.g., 6 months for Moderate)

  // Outcome Tracking
  completedAt          DateTime?
  outcomeNotes         String?
  resolvingScreeningId String?    @unique // The new screening that RESOLVED this follow-up.his is null until the CHP actually performs the re-screening
  resolvingScreening   Screening? @relation("ResolvingScreening", fields: [resolvingScreeningId], references: [id])

  // Cancelation
  cancelReason CancelReason? // Reason for stopping the follow-up (Categorical for reporting)
  cancelNotes  String? // // Free text for specific details
  canceledAt   DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  outreachActions OutreachAction[] // Every step tracked here

  @@index([referralId])
  @@index([providerId])
  @@index([clientId])
}

model OutreachAction {
  id         String   @id @default(cuid())
  followUpId String
  followUp   FollowUp @relation(fields: [followUpId], references: [id], onDelete: Cascade)

  // Action details
  actionType OutreachType
  actionDate DateTime
  outcome    OutreachOutcome

  // Contact details
  contactMethod ContactMethod?
  location      String? // For home visits: GPS/address
  duration      Int? // Minutes spent

  // Rich details
  notes           String? // What was discussed, patient response
  barriers        String? // Why patient hasn't visited (cost, transport, fear, etc.)
  nextPlannedDate DateTime? // When CHP plans next contact

  // Hospital verification
  verifiedAtFacility    Boolean @default(false)
  hospitalRegisterPhoto String? // Photo of register entry // Future

  createdAt DateTime @default(now())

  @@index([followUpId])
  @@index([actionDate])
}

enum TestOutcome {
  POSITIVE
  NEGATIVE
}

enum OutreachType {
  PHONE_CALL
  HOME_VISIT
  SMS_SENT
  FACILITY_VERIFICATION // CHP checked hospital register
  // COMMUNITY_MEETING
  // PEER_REFERRAL // Asked family/neighbor to encourage patient
}

enum OutreachOutcome {
  PATIENT_CONTACTED // Spoke to patient
  PATIENT_UNAVAILABLE // Not home, phone off
  PATIENT_COMMITTED // Promised to visit facility
  PATIENT_VISITED_FACILITY // Confirmed they went
  PATIENT_REFUSED // Doesn't want to go
  BARRIER_IDENTIFIED // Found obstacle (cost, transport, etc.)
  LOST_CONTACT // Can't reach anymore
}

enum ContactMethod {
  PHONE
  IN_PERSON
  SMS
  WHATSAPP
  // COMMUNITY_LEADER
}

enum ReferralStatus {
  PENDING
  VISITED_PENDING_RESULTS // Patient went to hospital, but results aren't in the app yet
  COMPLETED // Full loop finished (Visit + Results)
  REFUSED // Patient reached but refused to go (Important for reporting!)
}

enum FollowUpCategory {
  REFERRAL_ADHERENCE // Goal: Ensure they visit the hospital (High Risk)
  RE_SCREENING_RECALL // Goal: Ensure they screen again in 6 months (Moderate Risk)
  //Other Goals: Future-proofing  
}

enum Priority {
  HIGH // High Risk cases
  MEDIUM // Moderate Risk cases
  LOW // Routine
}

enum CancelReason {
  DECEASED // Patient has passed away
  RELOCATED // Moved out of the community health area
  UNREACHABLE // Lost to follow-up (e.g., after 5+ failed attempts)
  REFUSED_SERVICE // Patient explicitly asked not to be contacted anymore
  INCORRECT_DATA // Screening was a mistake or duplicate entry
  HOSPITALIZED_OTHER // Patient is in the hospital for a different, unrelated issue
}
